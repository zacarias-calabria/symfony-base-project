<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Techpump\Shop\Carts\Domain\ProductInCart" table="products_in_carts">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="unitPrice" column="unit_price" type="float" nullable="false"/>
        <field name="taxRate" column="tax_rate" type="float" nullable="false"/>
        <field name="quantity" column="quantity" type="integer" nullable="false"/>
        <field name="unitRate" column="unit_rate" type="float" nullable="false"/>
        <field name="unitAmount" column="unit_amount" type="float" nullable="false"/>
        <field name="totalPrice" column="total_price" type="float" nullable="false"/>
        <field name="totalRate" column="total_rate" type="float" nullable="false"/>
        <field name="totalAmount" column="total_amount" type="float" nullable="false"/>
        <field name="addedAt" column="added_at" type="datetime_immutable" nullable="false"/>
        <many-to-one field="cart" inversed-by="productsInCart">
            <join-column nullable="false" name="cart_id"/>
        </many-to-one>
        <many-to-one field="product">
            <join-column nullable="false" name="product_id"/>
        </many-to-one>
        <unique-constraints>
            <unique-constraint name="unique_constraint_idx" columns="cart_id,product_id"/>
        </unique-constraints>
    </entity>
</doctrine-mapping>
