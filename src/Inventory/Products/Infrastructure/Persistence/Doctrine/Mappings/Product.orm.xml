<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Techpump\Inventory\Products\Domain\Product" table="products">
        <id name="id" column="id" type="string" length="36"/>
        <field name="sku" column="sku" type="string" length="36" nullable="false" unique="true"/>
        <field name="name" column="name" type="string" length="128" nullable="false"/>
        <field name="price" column="price" type="float" nullable="false"/>
        <field name="taxRate" column="tax_rate" type="float" nullable="false"/>
    </entity>
</doctrine-mapping>
