{
  "type": "project",
  "name": "zacarias/symfony-base-project",
  "license": "proprietary",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Zacar√≠as Calabria",
      "email": "zacarias.calabria@gmail.com"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-ctype": "*",
    "ext-iconv": "*",
    "symfony/flex": "^2",
    "symfony/framework-bundle": "^7",
    "symfony/dotenv": "^7",
    "symfony/console": "^7",
    "symfony/runtime": "^7",
    "symfony/yaml": "^7",
    "symfony/messenger": "^7",
    "symfony/validator": "^7",
    "doctrine/orm": "^2",
    "doctrine/doctrine-bundle": "^2",
    "doctrine/doctrine-migrations-bundle": "^3",
    "lambdish/phunctional": "^2.1",
    "ramsey/uuid-doctrine": "^2.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "symfony/web-profiler-bundle": "^7",
    "phpunit/phpunit": "^10",
    "behat/behat": "^3",
    "fakerphp/faker": "^1",
    "behat/mink-browserkit-driver": "^2",
    "friends-of-behat/mink-extension": "^2",
    "friends-of-behat/symfony-extension": "^2",
    "rector/rector": "^0.19.2",
    "phpstan/phpstan": "^1.10",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-symfony": "^1.3",
    "phpstan/phpstan-doctrine": "^1.3",
    "phpstan/phpstan-phpunit": "^1.3",
    "vimeo/psalm": "^5.22",
    "psalm/plugin-symfony": "^5.1",
    "psalm/plugin-phpunit": "^0.18.4",
    "weirdan/doctrine-psalm-plugin": "^2.9"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/flex": true,
      "symfony/runtime": true,
      "phpstan/extension-installer": true
    },
    "sort-packages": false
  },
  "autoload": {
    "psr-4": {
      "App\\Apps\\API\\": "./apps/api/src/",
      "App\\Apps\\Head\\": "./apps/head/src/",
      "App\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\App\\": "./tests/src",
      "Tests\\Apps\\API\\": "./tests/apps/api/src"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "@cache-clear"
    ],
    "post-update-cmd": [
      "@cache-clear"
    ],
    "cache-clear": [
      "@head-cache-clear",
      "@api-cache-clear"
    ],
    "head-cache-clear": [
      "@php bin/head cache:clear"
    ],
    "api-cache-clear": [
      "@php bin/api cache:clear"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "code-static-analyse":[
      "@phpstan",
      "@psalm"
    ],
    "phpstan": [
      "./vendor/bin/phpstan analyse --no-progress --memory-limit=512M"
    ],
    "psalm": [
      "./vendor/bin/psalm --no-progress"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "^7"
    },
    "phpstan": {
      "includes": [
        "extension.neon"
      ]
    }
  }
}
